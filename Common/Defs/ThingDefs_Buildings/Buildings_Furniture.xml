<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ===== [MorrowRim_Dunmeri_AshPlanter] ===== -->
	<ThingDef ParentName="FurnitureWithQualityBase" Name="MorrowRim_Dunmeri_AshPlanterBase">
		<defName>MorrowRim_Dunmeri_AshPlanter</defName>
		<label>ash planter</label>
		<description>An ash filled planter. Often found in Dunmeri homes with colourful flowers, and sometimes other plants, growing from within.</description>
		<dominantStyleCategory>ESCP_DunmerStyle</dominantStyleCategory>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/MorrowRim_Dunmeri_AshPlanter</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<rotatable>true</rotatable>
		<size>(1,2)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.20</fillPercent>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>250</WorkToBuild>
			<Mass>2</Mass>
			<Flammability>1.0</Flammability>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Styleable"/>
		</comps>
		<fertility>1.2</fertility>
		<designationHotKey>Misc9</designationHotKey>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<defaultPlantToGrow>Plant_Daylily</defaultPlantToGrow>
			<sowTag>Decorative</sowTag>
		</building>
		<canGenerateDefaultDesignator>false</canGenerateDefaultDesignator>
		<uiIconOffset>(0, -0.05)</uiIconOffset>
	</ThingDef>
	<!-- ===== [MorrowRim_Dunmeri_AshPlanterSmall] ===== -->
	<ThingDef ParentName="MorrowRim_Dunmeri_AshPlanterBase">
		<defName>MorrowRim_Dunmeri_AshPlanterSmall</defName>
		<label>small ash planter</label>
		<graphicData>
			<texPath>Things/Building/Furniture/MorrowRim_Dunmeri_AshPlanterSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.9,1.9)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<rotatable>false</rotatable>
		<size>(1,1)</size>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>250</WorkToBuild>
			<Mass>2</Mass>
			<Flammability>1.0</Flammability>
		</statBases>
		<costStuffCount>20</costStuffCount>
	</ThingDef>
</Defs>
